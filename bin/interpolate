#!/usr/bin/perl
use Data::Dumper;
use File::Slurp qw(read_file write_file);
use File::Temp;

my $dir = File::Temp->newdir;
my $cache;

if (-e "cache/interpolate-cache.pl") {
    $cache = eval(read_file("cache/interpolate-cache.pl")) // {};
} else {
    $cache = {};
}
my $cache_changed;

sub do_subst {
    my ($format, $c, $preamble) = @_;

    # we deliberately cache values independently of the preamble.
    my $program = qq{
int main(void) {
    printf("$format", $c);

    return 0;
}
};

    my $ret = $cache->{$program};

    return $ret if defined($ret);

    write_file("$dir/tmp.cc", $preamble . "\n\n" . $program);
    system("asmjs-virtual-asmjs-g++ -Iinclude $dir/tmp.cc -o $dir/a.out") and die;

    $cache_changed = 1;
    return $cache->{$program} = `$dir/a.out`;
}

my $in = join("", <>);
my $preamble = "";

while ($in =~ s/\#(\{(((?>[^\{\}]+)|(?-3))*)\})\n//m) {
    $preamble .= $2 . "\n";
}

while ($in =~ s/(\%[l.0-9]*[defgosx])(\{((?:(?>[^\{\}]+)|(?-2))*)\})/do_subst($1, $3, $preamble)/mesgx) {}

print $in;

if ($cache_changed) {
    write_file("cache/interpolate-cache.pl", Dumper($cache));
}
